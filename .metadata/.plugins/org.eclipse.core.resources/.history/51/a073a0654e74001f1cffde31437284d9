package um;

public class Circulo implements FormaGeometrica{
	private double raio=0;
	
	public Circulo(double raio) {
		this.raio=raio;
	}
	
	@Override
	public void area() {
		
		System.out.println("O área do círculo é "+((raio*raio)*3.1415)+" metros quadrados");
	}

	@Override
	public void comprimento() {
		
		System.out.println("O comprimento do círculo é "+(2*(raio*3.1415))+" metros");
	}

	public double getRaio() {
		return raio;
	}

	public void setRaio(double raio) {
		this.raio = raio;
	}
	
}
