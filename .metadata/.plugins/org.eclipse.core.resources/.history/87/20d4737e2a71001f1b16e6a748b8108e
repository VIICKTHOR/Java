package questao6;

public class Main {
	public static void main(String[] args) {
        try {
            // Verifica se foi passado algum argumento
            if (args.length == 0) {
                throw new IllegalArgumentException("Nenhum argumento fornecido. Por favor, insira um número inteiro como argumento.");
            }
            
            // Tenta converter o argumento para um número inteiro
            int n = Integer.parseInt(args[0]);
            
            // Exibe os números de 0 até n-1
            for (int i = 0; i < n; i++) {
                System.out.println(i);
            }
            
        } catch (ArrayIndexOutOfBoundsException e) {
            // Tratamento para caso nenhum argumento seja passado
            System.out.println("Erro: Nenhum argumento foi fornecido.");
        } catch (NumberFormatException e) {
            // Tratamento para caso o argumento não seja um número inteiro válido
            System.out.println("Erro: O argumento fornecido não é um número inteiro válido.");
        } catch (IllegalArgumentException e) {
            // Tratamento para outros problemas, como falta de argumento
            System.out.println(e.getMessage());
        } catch (Exception e) {
            // Tratamento genérico para qualquer outra exceção inesperada
            System.out.println("Ocorreu um erro inesperado: " + e.getMessage());
        }
    }
}
